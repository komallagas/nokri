<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%#= nested_form_for([resource_name, resource.with_skills], url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

    <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>
  </div>

   <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

   <div class="field">
    <%= f.label :mobile_no %><br />
    <%= f.text_field :mobile_no %>
  </div>

  <div class="field">
    <%= f.label :language %><br />
    <%= f.text_field :language %>
  </div>

  <div class="field">
    <%= f.label :user_type %><br />
    <%= f.text_field :user_type %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  <%# resource.skills.each do %>
    <div class="field">
      <%= f.fields_for :skills, resource.skills.build do |f1| %>
        <%= f1.label :skill_name %><br>
        <%= f1.text_area :skill_name %><br>
      <% end %>
    <div>
  <%# end %>

   <div class="field">
      <%= f.fields_for :educations, resource.educations.build do |f1| %>
        <%= f1.label :Qualication %><br>
        <%= f1.text_area :Qualication %><br>
      <% end %>
    <div>
  
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
